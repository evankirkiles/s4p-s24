---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout>
  <svg
    viewBox="0 0 100 100"
    preserveAspectRatio="xMidYMid slice"
    xmlns="http://www.w3.org/2000/svg"
  >
    <filter id="blurMe">
      <feTurbulence baseFrequency="0.1 0.1" result="NOISE"></feTurbulence>
      <feGaussianBlur stdDeviation="5"></feGaussianBlur>
    </filter>

    <g filter="url(#blurMe)">
      <circle cx="50" cy="50" r="49" fill="green"></circle>
    </g>
  </svg>
</BaseLayout>

<script>
  window.addEventListener("mousemove", () => {
    document
      .querySelector("feTurbulence")
      ?.setAttribute(
        "baseFrequency",
        `${Math.random() * 0.1} ${Math.random() * 0.1}`,
      );
  });
</script>

<style lang="scss" is:global>
  body {
    --color-bg: #000000;
    --color-fg: #ffffff;
  }

  svg {
    width: 100vw;
    height: 100svh;
  }
</style>
