<style lang="scss" is:global>
  :root {
    --color-bg: #ffffff;
  }

  main {
    display: contents;
  }

  article {
    display: grid;
    grid-template: "info" auto "." 1fr "links" auto / 1fr;
    flex: 1;
    block-size: 100%;
  }

  .Info {
    grid-area: info;
    padding: var(--page-padding);
    max-inline-size: var(--max-inline-content);

    & h1 {
      margin-block-end: -0.3em;
      font-weight: 700;
      font-size: 2rem;
      text-transform: uppercase;
    }
  }

  .Links {
    grid-area: links;

    & h2 {
      padding: calc(0.5 * var(--page-padding)) var(--page-padding);
    }

    & a {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      border-block-start: 1px solid var(--color-bg);
      background-color: var(--color-fg);
      padding: var(--page-padding);
      color: var(--color-bg);
      font-weight: 700;
      font-size: 5rem;
      line-height: 0.9;
      letter-spacing: -0.02em;
      text-transform: uppercase;

      &[aria-disabled="true"] {
        pointer-events: none;
        color: var(--color-muted);
      }

      &::after {
        content: "â†’";
      }

      &:hover {
        background-color: var(--color-hl);
      }
    }
  }
</style>
